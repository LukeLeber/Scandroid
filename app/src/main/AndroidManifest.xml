<manifest
    package="com.lukeleber.scandroid"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.lukeleber.scandroid.gui.Scandroid"
            android:label="@string/title_activity_scandroid">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.lukeleber.scandroid.gui.VehicleHistory"
            android:label="@string/title_activity_vehicle_history">
        </activity>
        <activity
            android:name="com.lukeleber.scandroid.gui.SelectInterface"
            android:label="@string/title_activity_select_interface">
        </activity>
        <activity
            android:name="com.lukeleber.scandroid.gui.bluetooth.BluetoothConfiguration"
            android:label="@string/title_activity_bluetooth_configuration">
        </activity>
        <activity android:name="com.lukeleber.bluetooth.BluetoothEnabler$Wrapper"/>
        <activity
            android:name="com.lukeleber.scandroid.gui.GenericScanner"
            android:label="@string/title_activity_generic_scanner">
        </activity>
    </application>

</manifest>
