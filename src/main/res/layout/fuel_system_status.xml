<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FUELSYS1:"
        android:id="@+id/fuel_system_1_label"
        android:layout_alignParentTop="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waiting_for_response"
        android:id="@+id/fuel_system_1_status"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fuel_system_1_label"
        android:paddingTop="@dimen/activity_vertical_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FUELSYS2:"
        android:id="@+id/fuel_system_2_label"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/fuel_system_1_label"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waiting_for_response"
        android:id="@+id/fuel_system_2_status"
        android:layout_below="@+id/fuel_system_1_label"
        android:layout_toRightOf="@+id/fuel_system_2_label"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

</RelativeLayout>
