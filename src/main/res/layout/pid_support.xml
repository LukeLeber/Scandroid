<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supported PIDs"
        android:id="@+id/supported_pids_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/supported_pids_range_min"
        android:layout_below="@+id/supported_pids_label"
        android:layout_alignParentStart="true"
        android:text="0xE0"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to"
        android:id="@+id/supported_pids_to_label"
        android:layout_below="@+id/supported_pids_label"
        android:layout_toRightOf="@+id/supported_pids_range_min"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/supported_pids_range_max"
        android:layout_below="@+id/supported_pids_label"
        android:layout_toRightOf="@+id/supported_pids_to_label"
        android:text="0xFF"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/supported_pids_support_list"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/supported_pids_range_max"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

</RelativeLayout>